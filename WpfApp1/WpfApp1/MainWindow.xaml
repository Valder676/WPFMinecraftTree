<Window x:Class="MinecraftTreeGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Minecraft Tree Generator" Height="450" Width="543">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="212*"/>
        </Grid.RowDefinitions>
        <Canvas Name="MapCanvas" Background="LightGreen" Grid.RowSpan="2"/>
        <Button Content="Generate Trees" HorizontalAlignment="Left" VerticalAlignment="Top" Click="GenerateTrees_Click" Margin="427,30,0,0" Grid.Row="1"/>
    </Grid>
</Window>
